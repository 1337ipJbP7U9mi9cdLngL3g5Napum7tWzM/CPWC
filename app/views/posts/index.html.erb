<%= stylesheet_pack_tag 'post' %>
<%= javascript_pack_tag 'post' %>

<%= render 'layouts/header' %>

<main>
  <div class="">
    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <p>
        <%= post.short_description %>
      </p>
      <p>
        <%= post.image %>
      </p>
      <p>
        <%= post.slug %>
      </p>
      <p>
        <%= post.body %>
      </p>
    <% end %>

  </div>
</main>
